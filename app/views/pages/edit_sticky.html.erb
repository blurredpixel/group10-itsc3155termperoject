		  <div class ="editable-title-field">
			<input type="text" placeholder="Title" class="list-name" value=<% note.title %>>
		  </div>
	  <div contenteditable class="editable"><ol id="myP"><li><% note.text %></li></ol></div>
	</div>
</div>
<% end %>
<!-- the board, where posticks are added -->
<div id="board"></div>

